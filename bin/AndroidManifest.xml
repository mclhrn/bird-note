<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.birdnote"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait">
        <activity
            android:name="com.example.birdnote.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ReferenceGuide"
            	  android:label="@string/app_name"
            	  android:windowSoftInputMode="stateHidden">
        </activity>
        <activity android:name="Search"></activity>
        <activity android:name="BirdsSeen"
            	  android:windowSoftInputMode="stateHidden">
        </activity>
        <activity android:name="Wishlist"
            	  android:windowSoftInputMode="stateHidden">
        </activity>
        <activity android:name="Profile"></activity>
    </application>

</manifest>